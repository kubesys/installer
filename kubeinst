  if [[ $2 == "gitlab" ]]
  then
     init-devops-gitlab
  elif [[ $2 == "jenkins" ]]
  then
     init-devops-jenkins
  elif [[ $2 == "nexus3" ]]
  then
     init-devops-nexus3
  elif [[ $2 == "sonar" ]]
  then
     init-devops-sonar
  elif [[ $2 == "kanboard" ]]
  then
     init-devops-kanboard
  else
     unsupport $@
     help-devops
  fi

}

