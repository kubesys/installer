function help-network()
{
  cmddesc
  echo -e "Commands:"
  echo -e "  init-network kubeovn     :\t(Init): kubeovn"
  echo -e "  init-network calico      :\t(Init): calico"
  echo -e "  init-network flannel     :\t(Init): flannel"
  echo -e "  init-network --help      :\t(Init): help"
