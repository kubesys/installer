kube_image_server="registry.cn-hangzhou.aliyuncs.com/google_containers"
#kube_runtime="containerd"                # containerd or docker
#kube_runtime_version="1.4.9"             # containerd 
kube_runtime="docker"                # containerd or docker
kube_runtime_version="20.10.8"            # docker
kube_fip=""                               # if you deploy Kubernetes on a public cloud, the fip is public IP
kube_software_repo="39.100.71.73"         # if it is a private env, modify it, see https://github.io/kubesys/kube-meta 
kube_software_dns="kubesys.opensource.io" # if it is a private env, modify it, see https://github.io/kubesys/kube-meta 
kube_cni="calico"                         # calico or kubeovn
kube_addon="addon"                        # loki, prometheus, grafana
kube_auth="keycloak"                      # loki, prometheus, grafana


